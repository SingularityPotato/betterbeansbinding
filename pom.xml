        <developerConnection>scm:svn:https://kenai.com/svn/betterbeansbinding~svn/trunk/src</developerConnection>
        <url>https://kenai.com/svn/betterbeansbinding~svn/trunk/src</url>
    </scm>
    <developers>
        <developer>
            <name>Fabrizio Giudici</name>
